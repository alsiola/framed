swagger: "2.0"

################################################################################
#                              API Information                                 #
################################################################################
info:
  version: {{version}}
  title: {{title}}
  description: {{description}}

################################################################################
#             Host, Base Path, Schemes, Content Types and Security             #
################################################################################
host: {{host}}
basePath: {{basePath}}
schemes:
{{#each schemes}}
  - {{this}}
{{/each}}
consumes:
  - application/json
produces:
  - application/json

################################################################################
#                                  Paths                                       #
################################################################################
paths:
{{#each routes}}
  {{path}}:
    {{verb}}:
      description: {{description}}
      {{#if hasParams}}
      parameters:
      {{#each params}}
        - in: path
          name: {{name}}
          schema:
            type: {{type}}
    {{/each}}
    {{/if}}
{{/each}}